<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_averageRank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平均順位" />
        <TextView
            android:id="@+id/item_text_averageRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/item_totalRank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1位" />
            <TextView
                android:id="@+id/item_text_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13回" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2位" />
            <TextView
                android:id="@+id/item_text_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10回" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3位" />
            <TextView
                android:id="@+id/item_text_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23回" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4位" />
            <TextView
                android:id="@+id/item_text_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3回" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/item_divident"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配当金" />
        <TextView
            android:id="@+id/item_text_divident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150000" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_payment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="収支" />
        <TextView
            android:id="@+id/item_text_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125000" />

    </LinearLayout>

</LinearLayout>